<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_round"
    android:padding="15dp">

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/avatarImageView"
        android:layout_alignBottom="@id/avatarImageView"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/avatarImageView"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textColor="@color/icons"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/profileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="profile url"
            android:textColor="@color/icons"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/starredTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="starred_url"
            android:textColor="@color/icons"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>